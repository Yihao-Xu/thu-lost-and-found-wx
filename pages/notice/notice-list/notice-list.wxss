/* pages/notice/notice-list/notice-list.wxss */

.chat-cell{
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  background-color: white;
  align-items: center;
}

.chat-cell-right-part{
  display: flex;
  flex-direction: column;
  min-width: 0;
  align-items: stretch;
  flex-grow: 1;
}

.chat-cell-name-time{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0px 5px 0 0;
}

.chat-cell-avatar-box{
  padding: 5px;
  display: flex;
  width: 60px;
}

.chat-cell-avatar{
  width: 50px;
  height: 50px;
  flex: 0 0 50px;
}

.red-dot{
  background-color: red;
  width: 8px;
  height: 8px;
  border-radius: 50%;
}

.chat-cell-name {
  min-width: 0;
  flex: 1 1 0;
  overflow: hidden;
  margin-right: 3em;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chat-cell-time{
  color: gray;
  font-size: smaller;
  /* flex: 0 0; */
  margin-left: auto;
}

.chat-cell-message{
  color: gray;
  font-size: small;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
