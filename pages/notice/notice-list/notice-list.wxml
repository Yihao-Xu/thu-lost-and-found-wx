<!--pages/notice/notice-list/notice-list.wxml-->
<view>
  <div class='chat-cell' wx:for="{{chat_list}}" wx:key="sender">
    <image src="{{item.author.wechat_avatar}}" class="chat-cell-avatar"></image>
    <div class="chat-cell-right-part">
      <div class="chat-cell-name-time">
        <div class="chat-cell-name">{{item.author.username}}</div>
        <div class="chat-cell-time">{{item.messages[item.message.length-1].time}}</div>
      </div>
      <div class="chat-cell-message">{{item.messages[item.message.length-1].message}}</div>
    </div>

  </div>
</view>