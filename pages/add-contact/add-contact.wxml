<!--pages/add-contract/add-contract.wxml-->
<wxs src="../../wxs/lib.wxs" module="tools"></wxs>
<van-cell-group>
  <van-field label="联系人姓名" model:value="{{name}}"></van-field>
  <van-field label="联系号码" model:value="{{details}}"></van-field>
  <van-cell title="联系方式" value="{{tools.acronymTrans(method)}}" bindtap="sheetShow" is-link></van-cell>
</van-cell-group>
<van-button type="primary" bindtap="release" style="margin:20px;" block>添加联系方式</van-button>
<van-action-sheet show="{{sheetOnShow}}" actions="{{actions}}" bind:close="onClose" bind:select="onSelect" cancel-text="取消"></van-action-sheet>
