/* pages/login/login.wxss */

.box{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  width: 100%;
}

.logo-box{
  margin: 12vh 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo{
  width: 70px;
  height: 70px;
}

.button-box{
  margin-top: 20vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.text{
  font-size: small;
}

.button{
  width: 80%;
  height: 35px;
  border-radius: 5px;
  font-size: 14px;
  background: #82318E linear-gradient(to right, #ac62b8, #82318E);
  color: whitesmoke;
}

.login-button{
  margin-top: 5px;
}

.vertify-button{
  margin-top: 5vh;
}