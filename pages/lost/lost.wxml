<!--pages/lost/lost.wxml-->
<view>
  <van-search model:value="{{ search_value }}" placeholder="请输入搜索关键词" show-action bind:search="onSearch"
    bind:cancel="onCancel">
  </van-search>
  <lost-card wx:for="{{lostList}}" cardData="{{item}}"></lost-card>
  <van-button round color="#82318E" icon="plus" class="add-btn" bindtap="new_lost"></van-button>
</view>
