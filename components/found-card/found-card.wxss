/* components/found-card/found-card.wxss */
.head-photo{
  width: 96rpx;
  height: 96rpx;
  margin: 20rpx;
}
.card-pic{
  display: block;
}
.tag{
  margin: 10px;
}

.card{
  width: 94%;
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 3%;
}

.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 10px;
}

.avatar{
  width: 30px;
  height: 30px;
}

.username{
  margin-left: 0.5em;
}

.release-time{
  margin-left: auto;
  font-size: 15px;
  color: gray;
}

.images{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.image-item{
  max-width: 30%;
  max-height: 150px;
}